{% schema %}
{
  "name": "Swiper review slider",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "clickable",
      "default": false,
      "label": "Slide clickable"
    },
    {
      "type": "select",
      "id": "content_align",
      "label": "Content align in slides",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "navigation_enabled",
      "default": true,
      "label": "Navigation enabled"
    },
    {
      "type": "checkbox",
      "id": "pagination_enabled",
      "default": false,
      "label": "Pagination enabled"
    },
    {
      "type": "select",
      "id": "slide_height",
      "label": "Slide height",
      "options": [
        {
          "value": "default",
          "label": "default"
        },
        {
          "value": "middle",
          "label": "middle"
        },
        {
          "value": "large",
          "label": "large"
        }
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "slides_offset",
      "label": "Offset between slides",
      "options": [
        {
          "value": "default",
          "label": "default"
        },
        {
          "value": "normal",
          "label": "normal"
        },
        {
          "value": "small",
          "label": "small"
        }
      ],
      "default": "small"
    },
    {
      "type": "checkbox",
      "id": "slide_card",
      "default": false,
      "label": "Display as card (with background)"
    },
    {
      "type": "checkbox",
      "id": "container_width",
      "default": true,
      "label": "Slider full container width"
    },
    {
      "type": "select",
      "id": "slider_align",
      "label": "Align container",
      "options": [
        {
          "value": "align_left",
          "label": "left"
        },
        {
          "value": "align_middle",
          "label": "middle"
        }
      ],
      "default": "align_middle"
    },
    {
      "type": "select",
      "id": "slide_width",
      "options": [
        {
          "value": "240",
          "label": "small"
        },
        {
          "value": "310",
          "label": "normal"
        },
        {
          "value": "400",
          "label": "large"
        }
      ],
      "default": "310",
      "label": "Size slide"
    },
    {
      "type": "range",
      "id": "slider_columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Number of slides to desktop"
    },
    {
      "type": "color_background",
      "id": "background_content",
      "label": "Background content"
    }
  ],
  "blocks": [
    {
      "type": "page",
      "name": "Slide",
      "limit": 20,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "User name"
        },
        {
          "type": "text",
          "id": "title_desc",
          "label": "Title description"
        },
        {
          "type": "range",
          "id": "stars_quantity",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5,
          "label": "Stars quantity"
        },
        {
          "type": "inline_richtext",
          "id": "comment",
          "label": "Comment text"
        },
        {
          "type": "url",
          "id": "slide_url",
          "label": "Slide url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Swiper review slider",
      "blocks": [
        {
          "type": "page"
        }
      ]
    }
  ]
}
{% endschema %}
